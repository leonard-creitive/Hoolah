{
   "compilerOptions": {
     "module": "commonjs",
     "esModuleInterop": true,
     "target": "es6",
     "noImplicitAny": true,
     "moduleResolution": "node",
     "sourceMap": true,
     "outDir": "dist",
     "baseUrl": ".",
     "paths": {
       "*": [
         "node_modules/*",
         "src/types/*",
         "src/parser/*"
       ]
     },
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "lib": [
       "esnext.asynciterable",
       "es2015"
     ]
   },
   "include": [
     "src/**/*"
   ]
 }